{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build",
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "noUncheckedIndexedAccess": true,
    "resolveJsonModule": true,
    "module": "Node16",
    "target": "ES2022",
    "lib": ["ES2022"],
    "noImplicitReturns": true
  },
  "exclude": ["node_modules", "build", ".vscode-test"]
}
